<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="720.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.veterinary.gui.controller.register.RegisterProductController">
  <children>
    <VBox layoutX="200.0" layoutY="78.0" prefWidth="320.0" spacing="16.0">
      <children>
        <Label styleClass="title" text="Registrar Producto">
          <VBox.margin>
            <Insets/>
          </VBox.margin>
          <padding>
            <Insets bottom="8.0"/>
          </padding>
        </Label>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Nombre"/>
            <TextField fx:id="fieldName" promptText="Introduzca el Nombre del Producto" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Descripción"/>
            <TextField fx:id="fieldDescription" promptText="Introduzca la Descripción del Producto" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Tipo"/>
            <ComboBox fx:id="fieldKind" maxWidth="1.7976931348623157E308" promptText="Seleccione el Tipo del Producto"
                      styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Inventario"/>
            <TextField fx:id="fieldStock" promptText="Introduzca el Inventario Disponible" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Especie"/>
            <ComboBox fx:id="fieldSpecies" maxWidth="1.7976931348623157E308"
                      promptText="Seleccione para que Especie es el Producto" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Precio"/>
            <TextField fx:id="fieldPrice" promptText="Introduzca el Precio del Producto" styleClass="input"/>
          </children>
        </VBox>
        <VBox spacing="8.0">
          <children>
            <Label styleClass="label" text="Marca"/>
            <TextField fx:id="fieldBrand" promptText="Introduzca la Marca del Producto" styleClass="input"/>
          </children>
        </VBox>
        <HBox>
          <children>
            <Button mnemonicParsing="false" onAction="#handleRegisterProduct" maxWidth="1.7976931348623157E308"
                    prefWidth="320.0" styleClass="button" text="Registrar Producto"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>